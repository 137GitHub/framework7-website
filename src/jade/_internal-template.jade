block vars
doctype
html
  head
    meta(charset="utf-8")
    title=title
    meta(property="og:image", content="http://framework7.io/i/f7-banner.jpg")
    - if (includeF7Icons)
      link(rel="stylesheet" href="#{cdn}/css/framework7-icons.css")
    link(rel="stylesheet", href="#{cdn}/css/normalize.css")
    link(rel="stylesheet", href="#{cdn}/css/highlight.css")
    link(rel="stylesheet", href="#{cdn}/css/main.css")
    link(rel="shortcut icon" href="/favicon.png")
    script(src="#{cdn}/js/vendor/modernizr-2.7.1.min.js")
  body
    header.inner-header
      .center
        a(href="../").logo
        .carbon
          <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?zoneid=1673&serve=C6AILKT&placement=framework7io" id="_carbonads_js"></script>
        .title-links
          .title Framework7 v1
          .links-row
            .links
              - if (activeLink == 'docs')
                a(href="../docs/").active Docs
              - else
                a(href="../docs/") Docs

              - if (activeLink == 'vue')
                a(href="../vue/").active Framework7 Vue
              - else
                a(href="../vue/") Framework7 Vue

              - if (activeLink == 'react')
                a(href="../react/").active Framework7 React
              - else
                a(href="../react/") Framework7 React
              a(href="http://forum.framework7.io") Forum
          .links-row
            a(href="https://www.patreon.com/vladimirkharlampidi", target="_blank")
              img(src="#{cdn}/i/support-badge.png", style="height:20px")
    .content.center
      block content
    block footer
    script(src="#{cdn}/js/vendor/jquery-1.11.0.min.js")
    script(src="#{cdn}/js/plugins.js")
    script(src="#{cdn}/js/main.js")
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-74282934-3"></script>
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-74282934-3');
    block scripts