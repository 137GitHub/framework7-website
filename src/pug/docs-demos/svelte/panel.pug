extends _layout

block content
  style.
    /* Limit resizable panel width */
    .panel {
      min-width: 100px;
      max-width: 90vw;
    }
  script(type="text/babel").

          <App>
            <Panel resizable left reveal>
              <View>
                <Page>
                  <Block>Left panel content</Block>
                </Page>
              </View>
            </Panel>
            <Panel resizable right themeDark>
              <View>
                <Page>
                  <Block>Right panel content</Block>
                </Page>
              </View>
            </Panel>
            <View main>
              <Page>
                <Navbar title="Panel"></Navbar>

                <Block class="row">
                  <Col>
                    <Button raised panelOpen="left">Open left panel</Button>
                  </Col>
                  <Col>
                    <Button raised panelOpen="right">Open right panel</Button>
                  </Col>
                </Block>
              </Page>
            </View>
          </App>

<script>
  import {App, Panel, View, Page, Block, Navbar, Col, Button} from 'framework7-svelte';
</script>
